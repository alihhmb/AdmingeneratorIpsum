
{% extends "AdmingeneratorGeneratorBundle::base_admin.html.twig" %}

{% block body %}{% block list_title %}   
<head>
    <h1>Here is a beautifull title no  ???</h1>
</head>
{% endblock %}
<div class="main_content">
        <table>{% block list_thead %}   
    <thead>
        <tr class="list_thead">
        
                        
            <th class="list_thead_column">
                                    {% if sortColumn == 'id' and sortOrder == 'ASC' %}
                        <a href="?sort=id&order_by=desc">
                    {% else %}
                        <a href="?sort=id&order_by=asc">
                    {% endif %}
                                    Id
                                    </a>
                    {% if sortColumn == 'id' %}
                        <span class="arrow
                        {% if sortColumn == 'id' and sortOrder == 'ASC' %}
                            order_asc
                        {% else %}
                            order_desc
                        {% endif %}
                        "> </span>
                    {% endif %}
                            </th>
            
                        
            <th class="list_thead_column">
                                    {% if sortColumn == 'title' and sortOrder == 'ASC' %}
                        <a href="?sort=title&order_by=desc">
                    {% else %}
                        <a href="?sort=title&order_by=asc">
                    {% endif %}
                                    Title
                                    </a>
                    {% if sortColumn == 'title' %}
                        <span class="arrow
                        {% if sortColumn == 'title' and sortOrder == 'ASC' %}
                            order_asc
                        {% else %}
                            order_desc
                        {% endif %}
                        "> </span>
                    {% endif %}
                            </th>
            
                        
            <th class="list_thead_column">
                                    {% if sortColumn == 'is_published' and sortOrder == 'ASC' %}
                        <a href="?sort=is_published&order_by=desc">
                    {% else %}
                        <a href="?sort=is_published&order_by=asc">
                    {% endif %}
                                    Is published
                                    </a>
                    {% if sortColumn == 'is_published' %}
                        <span class="arrow
                        {% if sortColumn == 'is_published' and sortOrder == 'ASC' %}
                            order_asc
                        {% else %}
                            order_desc
                        {% endif %}
                        "> </span>
                    {% endif %}
                            </th>
            
                        
                            <th class="actions">Actions</th>
                    </tr>
    </thead>
{% endblock %}   
{% block list_tbody %}
    <tbody>
        {% if Movies|length > 0 %}
         
        {% for Movie in Movies %}
        <tr class="list_trow">{% block list_row %}
            <td>
                            {{ Movie.id }}
                    </td>
            <td>
                            {{ Movie.title }}
                    </td>
            <td>
                {% if Movie.isPublished %}
        <img src="{{ asset("bundles/admingeneratorgenerator/images/tick.png") }}" alt="OK" />
    {% else %}
        <img src="{{ asset("bundles/admingeneratorgenerator/images/cross.png") }}" alt="KO" />
    {% endif %}
        </td>
    {% endblock %}
{% block list_object_actions %}
         <td class="actions">
                    <a class="edit" href="{{ path("DemoBundle_edit", { 'id': Movie.id }) }}"> </a>
                    <a class="delete" href="{{ path("DemoBundle_delete", { 'id': Movie.id }) }}"> </a>
             </td>
    {% endblock %}
</tr>
        {% endfor %}
        
        {% else %}
        <tr class="list_trow no_results_row">
            <td colspan="4">There is no results</td>
        </tr>
        {% endif %}
    </tbody>
{% endblock %}   
</table>{% block list_paginator %}
    <div class="pagination">
        {{ pagerfanta(Movies, 'admingenerator') }}
    </div>
{% endblock %}
{% block list_actions %}
         <ul class="actions">
                    <li><a class="new" href="{{ path("DemoBundle_new") }}">New</a></li>
             </ul>
    {% endblock %}
</div>
    <div class="filters">
        <table>
            <thead>
                <tr>
                    <th>Filters</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{% block list_filters %}
<form action="{{ path("DemoBundle_filters") }}" method="post" {{ form_enctype(form) }}>
    <fieldset class="form_block">
        {{ form_errors(form) }}
        <ul>
                    <li>
                {{ form_label(form['title']) }}
                {{ form_widget(form['title']) }}
                {{ form_errors(form['title']) }}
            </li>
                    <li>
                {{ form_label(form['is_published']) }}
                {{ form_widget(form['is_published']) }}
                {{ form_errors(form['is_published']) }}
            </li>
                    <li>
                 {{ form_rest(form) }}
                 <input type="submit" class="submit_button" value="Filter" />
            </li>
        </ul>
    </fieldset>
</form>
{% endblock %}
</td>
                </tr>
            </tbody>
        </table>
    </div>    
{% endblock %}