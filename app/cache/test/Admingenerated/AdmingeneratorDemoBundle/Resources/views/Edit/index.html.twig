
{% extends "AdmingeneratorGeneratorBundle::base_admin.html.twig" %}

{% block body %}{% block list_title %}   
<head>
    <h1>You're editing the movie "{{ Movie.title }}"</h1>
</head>
{% endblock %}
{% block form %}
<form 
{% if Movie.id %}
    action="{{ path("DemoBundle_update", { 'id': Movie.id }) }}"
{% else %}
    action="{{ path("DemoBundle_create") }}"
{% endif %}
 method="post" {{ form_enctype(form) }}>
    <fieldset class="form_block">
        {{ form_errors(form) }}
        <ul>
                    <li>
                {{ form_label(form['title']) }}
                {{ form_widget(form['title']) }}
                {{ form_errors(form['title']) }}
            </li>
                    <li>
                {{ form_label(form['is_published']) }}
                {{ form_widget(form['is_published']) }}
                {{ form_errors(form['is_published']) }}
            </li>
                    <li>
                 {{ form_rest(form) }}
                 <input type="submit" class="submit_button" value="Save" />
            </li>
        </ul>
    </fieldset>
</form>
{% endblock %}
{% endblock %}